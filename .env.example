# FinPilot Environment Configuration
# Copy this to .env and update with your settings

# Database Configuration
DATABASE_URL=sqlite:///./finpilot.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/finpilot

# App Settings
DEBUG=True
APP_NAME=FinPilot
APP_VERSION=1.0.0

# Security
SECRET_KEY=your-secret-key-change-in-production

# AI Engine
RECOMMENDATION_THRESHOLD=0.8
WARNING_THRESHOLD=0.5
ANALYSIS_PERIOD_DAYS=30

# Blockchain
BLOCKCHAIN_ENABLED=True

# Logging
LOG_LEVEL=INFO
